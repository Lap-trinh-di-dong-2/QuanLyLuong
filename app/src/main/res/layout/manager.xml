<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4E674F"
    tools:context=".GiaoDien.MenuManager">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="50sp"
        android:src="@drawable/quanlyluong1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="10sp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="150sp"
            android:layout_height="130sp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:background="#EAE4E4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phòng Ban"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <Button
                    android:id="@+id/btnPhongBan"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/phongban2" />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="150sp"
            android:layout_height="130sp"
            android:layout_weight="1"
            android:layout_marginLeft="10sp"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp"
                android:background="#EAE4E4">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhân Viên"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <Button
                    android:id="@+id/btnNhanVien"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/nhanvien1" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginTop="30sp"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="100sp"
            android:layout_height="130sp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            app:cardElevation="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:background="#EAE4E4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chấm Công"
                android:textStyle="bold"
                android:textSize="20sp"/>
             <Button
                android:id="@+id/btnChamCong"
                 android:layout_width="80dp"
                 android:layout_height="80dp"
                 android:layout_alignParentRight="true"
                 android:layout_alignParentBottom="true"
                android:background="@drawable/chamcong"/>
        </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="100sp"
            android:layout_height="130sp"
            android:layout_weight="1"
            app:cardCornerRadius="20dp"
            android:layout_marginLeft="10sp"
            app:cardElevation="2dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            android:background="#EAE4E4">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tạm Ứng"
                android:textStyle="bold"
                android:textSize="20sp"/>
        <Button
            android:id="@+id/btnTamUng"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
           android:background="@drawable/tamung1"/>
        </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="200sp"
        android:layout_height="130sp"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="30sp"
        android:layout_gravity="center"
        android:layout_marginLeft="10sp"
        app:cardElevation="2dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:background="#EAE4E4">
    <Button
        android:id="@+id/btnThongke"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/thongke"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thống Kê"
        android:textStyle="bold"
        android:textSize="20sp"/>
    </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>