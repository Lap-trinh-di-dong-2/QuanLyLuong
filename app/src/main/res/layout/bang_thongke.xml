<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".GiaoDien.Thongke.BangThongKe">

    <TextView
        style="@style/tieude"
        android:text="Lọc theo tháng"/>
    <LinearLayout
        style="@style/linerlayout"
        >
        <fr.ganfra.materialspinner.MaterialSpinner
            style="@style/spin1"
            android:layout_weight="1"
            android:id="@+id/spNgayCham"
            app:ms_enableFloatingLabel="false"
            app:ms_enableErrorLabel="false"
            app:ms_floatingLabelText="floating label"
            app:ms_thickness="2dp"
            app:ms_arrowSize="16dp"
            app:ms_alignLabels="false"
          />

        <Button
            style="@style/button"
            android:id="@+id/btnLoc"
            android:text="Lọc"
            android:background="@drawable/custom_button4"
            />
    </LinearLayout>

    <LinearLayout
        style="@style/linerlayout"
        android:gravity="center">
        <TextView
            style="@style/textview1"
            android:text="@string/tongluong"/>

        <TextView
            android:id="@+id/tvTongLuong"
            style="@style/textview1"
            android:text="5000000" />
    </LinearLayout>
    <ListView
        style="@style/listview"
        android:id="@+id/lvThongKe"
        android:divider="#304FFE"
        android:dividerHeight="5dp"/>
</LinearLayout>